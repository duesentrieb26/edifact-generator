  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug inside Docker",
      "type": "php",
      "request": "launch",
      "hostname": "0.0.0.0",
      "port": 9000,
      "pathMappings": {
        "/workspaces/edifact-generator": "${workspaceFolder}"
      }
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 0,
      "runtimeArgs": [
        "-dxdebug.start_with_request=yes"
      ],
      "env": {
        "XDEBUG_MODE": "debug,develop",
        "XDEBUG_CONFIG": "client_port=${port}"
      }
    }
  ]
}